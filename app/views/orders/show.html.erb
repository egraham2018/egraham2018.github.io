<h1>Your Cart</h1>


<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Item</th>
    <th class="center">Unit Price</th>
    <th class="center">Quantity</th>
    <th class="center">Subtotal</th>
  </tr>

  <% @order.order_items.each do |item| %>

  <tr>
  <td class="center"><%=item.product.name%></td>
  <td class="center"><%=item.product.price%></td>
  <td class="center"><%=item.quantity %>   <%= link_to 'Change Quantity', edit_order_item_path(item) %></td>
  <td class="center"><%=item.subtotal%></td>
  <td class="center"><%= link_to 'Remove', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>

  <% end %>
</table>
<p> Total: <%=number_to_currency(@order.total)%> </p>

<%= link_to 'Continue Shopping', products_path %> |
<%= link_to "Empty Cart", @order, data: { confirm: 'Are you sure?' }, method: :delete%> <br/> <br/>

<%= button_to 'Checkout', edit_order_path, method: :get, class: "btn btn-success"%> 