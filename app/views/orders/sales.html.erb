<div class="center">
  <center>
  <h2>Order History: </h2> <br/>
</center>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Items</th>
    <th class="center">Price</th>
    <th class="center">Date Purchased</th>
    <th class="center">Customer</th>
    <th class="center">Type</th>
  </tr>

  <% @orders.each do |order| %>
  <% if order.status=="submitted" %>
    <tr>
      <td class="center">

        <%= order.order_items.each do |i|%>
        <%=i.quantity.to_i %> <%=i.product.name %>
        <% end %>

      </td>
      <td class="center"><%= number_to_currency(order.total) %></td>
      <td class="center"><%= order.updated_at.strftime("%D, %R") %></td>
      <td class="center"><%= order.buyer.name%></td>

      <td class="center">
        <% if order.delivery==true %>
          Delivery
        <% else %>
          Pickup
        <% end %>
      </td>
    </tr>
  <% end %>
  <% end %>
</table>

<%= link_to 'Back', site_profile_path , class: "btn btn-link" %>